<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/main"
    android:background="@color/colorBackgroundLight"
    tools:context=".MainActivity">

    <!-- Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can you guest the song?"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/answer_1_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Answer options in vertical chain -->
    <TextView
        android:id="@+id/answer_1_text"
        style="@style/AnswerTextViewStyle"
        android:text=""
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toTopOf="@+id/answer_2_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/answer_2_text"
        style="@style/AnswerTextViewStyle"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="12dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/answer_3_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_1_text" />

    <TextView
        android:id="@+id/answer_3_text"
        style="@style/AnswerTextViewStyle"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="12dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/answer_4_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_2_text" />

    <TextView
        android:id="@+id/answer_4_text"
        style="@style/AnswerTextViewStyle"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="12dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/answer_5_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_3_text" />

    <TextView
        android:id="@+id/answer_5_text"
        style="@style/AnswerTextViewStyle"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_4_text" />

    <!-- Progress Info Container -->
    <LinearLayout
        android:id="@+id/progress_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/answer_5_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Time and Points Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0:01 / 0:15"
                android:textColor="@color/white50"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 5pts"
                android:textColor="@color/white50"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Progress Bar Background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/progress_bar_background">

            <!-- Progress Bar Foreground -->
            <View
                android:id="@+id/progress_bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/progress_bar_foreground" />
        </FrameLayout>
    </LinearLayout>

    <!-- Play Button -->
    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/play_button_background"
        android:contentDescription="Play audio"
        android:elevation="4dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toTopOf="@+id/play_instruction_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_info_container" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/play_instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Turn up the volume and tap to start the track!"
        android:textAlignment="center"
        android:textColor="@color/white50"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_button" />

    <!-- Answer input and submit button -->
    <AutoCompleteTextView
        android:id="@+id/answer_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittext_background_selector"
        android:elevation="4dp"
        android:hint="Type your answer here..."
        android:inputType="text"
        android:padding="16dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/submit_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_instruction_text"
        app:layout_constraintVertical_bias="0.919"


        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_button"
        android:layout_width="109dp"
        android:layout_height="55dp"
        android:background="@drawable/submit_button_background"
        android:elevation="4dp"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:text="SUBMIT"
        android:textColor="@color/colorBackgroundDark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/answer_input"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintTop_toTopOf="@+id/answer_input"
        app:layout_constraintVertical_bias="0.333" />

</androidx.constraintlayout.widget.ConstraintLayout>